package main

import (
	"context"
	"fmt"
	"os"

	"github.com/godbus/dbus"
)

func main() {
	if err := run(); err != nil {
		fmt.Fprintf(os.Stderr, "error: %s\n", err)
		os.Exit(1)
	}
}

func run() error {
	conn, err := dbus.SystemBus()
	if err != nil {
		return err
	}
	defer conn.Close()

	o := LookupInterface(
		conn.Object("org.freedesktop.DBus", "/org/freedesktop/DBus"),
		"org.freedesktop.DBus",
	).(*Org_Freedesktop_DBus)
	if _, err := o.GetId(context.Background()); err != nil {
		return err
	}
	return nil
}
